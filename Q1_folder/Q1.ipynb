from py.functions import load_star_data, prepare_features, split_data, scale_features, encode_labels

df = load_star_data()

drop_cols = ["obj_ID"]  # only if it exists in the dataset
X, y = prepare_features(df, target_col="class", drop_cols=drop_cols)

X_train, X_val, X_test, y_train, y_val, y_test = split_data(X, y, test_size=0.2, val_size=0.2, random_state=42)

X_train_s, X_val_s, X_test_s, scaler = scale_features(X_train, X_val, X_test)

y_train_e, y_val_e, y_test_e, le = encode_labels(y_train, y_val, y_test)

